<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smart.home.mapper.ConnectionStatusMapper">
    <!-- 连接状态表字段映射 -->
    <resultMap id="BaseResultMap" type="com.smart.home.model.entity.ConnectionStatus">
        <id column="id" property="id" />
        <result column="device_id" property="deviceId" />
        <result column="user_id" property="userId" />
        <result column="connection_status" property="connectionStatus" />
        <result column="connection_time" property="connectionTime" />
        <result column="disconnection_time" property="disconnectionTime" />
        <result column="last_heartbeat" property="lastHeartbeat" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
    </resultMap>

    <!-- 基础字段列表 -->
    <sql id="BaseColumns">
        id, device_id, user_id, connection_status, connection_time, disconnection_time, last_heartbeat, created_at, updated_at
    </sql>

    <!-- 根据设备ID查询连接状态 -->
    <select id="selectByDeviceId" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
        <include refid="BaseColumns" />
        FROM connection_status
        WHERE device_id = #{deviceId}
    </select>

    <!-- 更新最后心跳时间 -->
    <update id="updateHeartbeat" parameterType="java.lang.String">
        UPDATE connection_status
        SET last_heartbeat = NOW(), updated_at = NOW()
        WHERE device_id = #{deviceId}
    </update>

    <!-- 设置设备为在线状态 -->
    <update id="setDeviceOnline" parameterType="map">
        UPDATE connection_status
        SET connection_status = 'connected', 
            connection_time = NOW(),
            updated_at = NOW()
        WHERE device_id = #{deviceId} AND user_id = #{userId}
    </update>

    <!-- 设置设备为离线状态 -->
    <update id="setDeviceOffline" parameterType="java.lang.String">
        UPDATE connection_status
        SET connection_status = 'disconnected', 
            disconnection_time = NOW(),
            updated_at = NOW()
        WHERE device_id = #{deviceId}
    </update>
</mapper>